%section.forgot_password.container
  .row
    .span10.offset1
      =form_tag password_reset_path, method: :post, class: "sign_in" do
        %header
          %h1 Forgot Password?
          %p We will send you an email with a link that you can use to reset your password.
        %fieldset
          =label_tag :email, "Email Address"
          =email_field_tag :email, params[:email]
        %fieldset.action
          %input(type="submit" value="Send Email" class="btn")

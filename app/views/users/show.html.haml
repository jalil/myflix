%section.user.container
  .row
    .span10.offset1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('#{@user.email}'.downcase)}?s=40")
          %h2 #{@user.full_name}'s video collections (#{@user.queue_items.count})
          - if !current_user.follows?(@user)
            = link_to "Follow", relationships_path(influencer_id: @user.id), method: :post, class: "btn"
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - @user.queue_items.map(&:video).each do |video|
              %tr
                %td
                  = link_to video.title, video
                %td
                  = video.category.name

%section.user_reviews.container
  .row
    .span10.offset1
      %header
        %h3 #{@user.full_name}'s Reviews (#{@user.reviews.count})
      %ul
        - @user.reviews.each do |review|
          %article.review
            %li.row
              .span2
                %p
                  = link_to review.video.title, review.video
                %span Rating: #{review.rating} / 5
              .span8
                %p= review.content

%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - @relationships.each do |relationship|
        %tr
          %td
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(relationship.influencer.email)}?s=40")
            = link_to relationship.influencer.full_name, relationship.influencer
          %td.extra-padding= relationship.influencer.videos_in_queue.count
          %td.extra-padding= relationship.influencer.influencing_relationships.count
          %td.extra-padding
            = link_to relationship, method: :delete do
              %i.icon-remove

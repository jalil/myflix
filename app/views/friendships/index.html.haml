%section.people
  %header
    %h2 People I Follow
  %table.table
    %thead
      %tr
        %th(width="30%")
        %th(width="20%") Videos in Queue
        %th(width="20%") Followers
        %th(width="30%") Unfollow
    %tbody
      - current_user.friendships.each do |friendship|
        %tr
          %td
            %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('knwang@gmail.com'.downcase)}?s=40")
            = link_to friendship.friend.full_name
          %td.extra-padding #{friendship.friend.line_items.count}
          %td.extra-padding #{friendship.friend.inverse_friends.count}
          %td.extra-padding
            = link_to friendship, method: :delete do
              %i.icon-remove

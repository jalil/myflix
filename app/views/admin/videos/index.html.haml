%article.video-category
  %header
    - @categories.each do |category|
      %h2= category.title
      .videos.row
        - category.recent_videos.each do |video|
          .video.span2
            =link_to (image_tag video.small_image), video
            =link_to "Edit", edit_admin_video_path(video)
            =link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?'}
